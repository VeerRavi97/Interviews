
#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n=0;
    long long diff;
    long long ans;

while(scanf("%d",&n)!=EOF)
{
 vector <int > v;
    for(int i=0;i<n;i++)
    {
        int q;
        cin >> q;
        v.push_back(q);
    }
    sort(v.begin(),v.end());
    ans=1000000000;
    for(int i=0;i<n-1;i++)
    {
        diff=0;
        diff=abs(v[i]-v[i+1]);
        ans=min(ans,diff);

    }

    printf("%lld\n",ans);

}

}

