#include<bits/stdc++.h>
using namespace std;


int main(){
    ios :: sync_with_stdio(0);
    cin.tie(0);
    int n;
    
    cin >> n;
    vector<int> arr(n);
    for(int i = 0;i < n;i++)
       cin >> arr[i];
    
    double plus=0,minus=0,zero=0;
    for(int i = 0;i < n;i++)
    {
        if(arr[i]>0)
            plus++;
        else if(arr[i]<0)
            minus++;
        else
            zero++;
        
    }
    
    
    cout << fixed << setprecision(6) << plus/n << "\n";
     cout << fixed << setprecision(6) << minus/n << "\n";
     cout << fixed << setprecision(6) << zero/n << "\n";
    return 0;
}
